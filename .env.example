# Provider: "openai" (default), "azure" ou "google"
LLM_PROVIDER=openai

# OpenAI (quando LLM_PROVIDER=openai)
# OPENAI_API_KEY=sk-...

# Azure OpenAI (quando LLM_PROVIDER=azure)
# AZURE_OPENAI_API_KEY=your-azure-key
# AZURE_OPENAI_ENDPOINT=https://<resource>.openai.azure.com/
# AZURE_OPENAI_API_VERSION=2024-12-01-preview
# AZURE_DEPLOYMENT_CHEAP=gpt-4o-mini
# AZURE_DEPLOYMENT_PREMIUM=gpt-4o
# AZURE_DEPLOYMENT_EMBEDDING=text-embedding-3-small

# Google Gemini (quando LLM_PROVIDER=google)
# GOOGLE_API_KEY=your-gemini-key-here
# GEMINI_CHEAP_MODEL=gemini-2.5-flash
# GEMINI_PREMIUM_MODEL=gemini-2.5-pro
# GEMINI_EMBEDDING_MODEL=gemini-embedding-001

# Model tiers (sobrescreva para usar modelos diferentes)
# LLM_CHEAP_MODEL=gpt-4.1-nano
# LLM_PREMIUM_MODEL=gpt-4.1
# EMBEDDING_MODEL=text-embedding-3-small

# Infraestrutura
QDRANT_HOST=localhost
QDRANT_PORT=6333
# QDRANT_COLLECTION=abi_docs
REDIS_HOST=localhost
REDIS_PORT=6379

# RAG
CHUNK_SIZE=512
CHUNK_OVERLAP=64
TOP_K_RESULTS=5

# API auth (vazio = sem auth, para dev local)
# API_KEY=
